{
  "family": "franquicias-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::800936798544:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "franquicias-api",
      "image": "800936798544.dkr.ecr.us-east-1.amazonaws.com/franquicias-api:awsfix2",
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        {
          "name": "SPRING_DATA_MONGODB_URI",
          "value": "mongodb://adminfranquicias:unaPasswordSegura123!@franquicias-docdb-cluster.cluster-cg7aoq8kqpwy.us-east-1.docdb.amazonaws.com:27017/franquiciasdb?ssl=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "us-east-1",
          "awslogs-group": "/ecs/franquicias-api",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
